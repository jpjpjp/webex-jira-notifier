{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Server",
            "type": "node",
            "request": "launch",
            "outputCapture": "std",  // puts Winston logger in VSCode console
            "env": {
              "DEBUG":"framework",
              "USE_ISSUE_UPDATED_FOR_COMMENTS": "true"
            },
            "protocol": "inspector",
            "program": "${workspaceFolder}/server.js"
        },
        {
          "name": "External terminal",
          "type": "node",
          "request": "launch",
          "env": {"DEBUG":"framework"},
          "protocol": "inspector",
          "console": "externalTerminal",
          "program": "${workspaceFolder}/server.js"
      },
      {
            "name": "Launch Test",
            "type": "node",
            "request": "launch",
            "env": {"DEBUG":"framework",
                    "VERBOSE":"true",
                    "TEST_TIMER_MULTIPLIER": "500500",
                    "USE_ISSUE_UPDATED_FOR_COMMENTS": "true",
                    "TEST_CASES": "SUBSET",
                    "TEST_CASE_DIR": "sandbox-jira-event-test-cases",
                    "LOG_LEVEL": "0"},
            "protocol": "inspector",
            "outputCapture": "std",
            "program": "${workspaceFolder}/sandbox-jira-event-test-cases/test-jira-event-handler.js"
        },
        {
          "name": "Launch Old Test",
          "type": "node",
          "request": "launch",
          "env": {"DEBUG":"framework",
                  "VERBOSE":"true",
                  "TEST_TIMER_MULTIPLIER": "500500",
                  "TEST_CASES": "SUBSET",
                  "TEST_CASE_DIR": "prod-jira-event-test-cases",
                  "LOG_LEVEL": "0"},
          "protocol": "inspector",
          "outputCapture": "std",
          "program": "${workspaceFolder}/test-jira-event-handler.js"
      },
      {
            "name": "Heroku",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 9229,
            "protocol": "inspector",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
        }      
    ]
}